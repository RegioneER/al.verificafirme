@model VerificaFirme.WebUI.Models.ModuloViewModel
@{

    int? idModulo = (int?)ViewBag.IdModulo;
}

<div class="card-wrapper card-space">
    <div class="card card-bg">
        <div class="card-body">
            <div class="row">
                <div class="col-9">
                    <h3 class="card-title">Dati generali procedura</h3>
                </div>
                <div class="col-3 text-right">
                    <span>Quorum @(Model.Procedimento.NrFirme.ToString("N0"))/@Model.Procedimento.QuorumFirme.ToString("N0") </span><br />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-9">
                    @foreach (var postazione in Model.Procedimento.ProcedimentoPostazione)
                    {
                        @Html.Raw($"<strong>{postazione.CodicePostazione}</strong>({postazione.ModuloDa.ToString("N0")}-{postazione.ModuloA.ToString("N0")})&nbsp; &nbsp;") 
                        
                    }
                </div>
                <div class="col-xs-12 col-md-3 text-right">
                    <a href='@Url.Action("ProspettoRiepilogo", "Procedimento", new { idProcedimento = Model.Procedimento.ID })' title="Prospetto riepilogo" class="btn btn-default"><i class="fas fa-chart-bar"></i> Prospetto riepilogo</a>
                </div>
            </div>
        </div>
    </div>
</div>