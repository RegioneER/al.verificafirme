@model Exception
@using RER.Tools.MVC.Agid

@{
    ViewBag.Title = "Errore";
}
<br>

<div class="form-group col">
    <div class="alert alert-danger" role="alert">
        <h4>
            Si è verificato un errore durante l'esecuzione dell'operazione
        </h4>

        @if (Model != null)
        {
            <p> @Model.Message </p>
        }
        else
        {
            <p> Gli amministratori sono stati avvertiti.</p>
        }

        @Html.Raw(Session["MostraErrore"] != null ? Session["MostraErrore"].ToString() : "")

        @Html.Raw(Session["validationErrors"] != null ? Session["validationErrors"].ToString() : "")



    </div>
</div>